{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "amd": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "moment": true,
    "d3": true,
    "_": true,
    "jsSHA": true
  },
  "rules": {
    "comma-dangle": 0,
    "quotes": [ 1, "single" ],
    "no-undef": 1,
    "global-strict": 0,
    "no-extra-semi": 1,
    "semi": [2, "never"],
    "no-underscore-dangle": 0,
    "no-console": 1,
    "no-trailing-spaces": [1, { "skipBlankLines": true }],
    "no-unreachable": 1,
    "no-alert": 0,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "eol-last": 0,
    "no-use-before-define": ["error", { "classes": false }],
    "no-unused-expressions": ["error", { "allowShortCircuit": true, "allowTernary": true }],
    "react/prefer-stateless-function": 0,
    "import/no-unresolved": 0,
    "global-require": 0,
    "new-cap": 0,
    "no-unused-vars": 1
  }
}
